#!/bin/sh

# Exit immediately if a command exits with a non-zero status
set -e

# Handle Ctrl+C and other interrupts
trap 'echo "\nâŒ Pre-commit hook interrupted. Aborting commit."; exit 1' INT TERM

echo "ğŸ” Running pre-commit hook..."

# Get all staged Dart files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep '\.dart$')

if [ -z "$STAGED_FILES" ]; then
    echo "âœ… No Dart files to check."
    echo "ğŸ‰ Pre-commit hook completed successfully!"
    exit 0
fi

COUNT=$(printf "%s\n" "$STAGED_FILES" | wc -l | tr -d ' ')
echo "ğŸ“ Found ${COUNT} Dart file(s) to process..."

# Check file line counts
echo "ğŸ“ Checking file sizes avoiding bloated files..."
EXCEEDED_FILES=""
printf "%s\n" "$STAGED_FILES" | while IFS= read -r file; do
    [ -n "$file" ] || continue
    LINE_COUNT=$(wc -l < "$file" | tr -d ' ')
    if [ "$LINE_COUNT" -gt 500 ]; then
        echo "âš ï¸  $file has $LINE_COUNT lines (exceeds 500 line limit)"
        EXCEEDED_FILES="${EXCEEDED_FILES}${file}\n"
    fi
done

if [ -n "$EXCEEDED_FILES" ]; then
    echo "âŒ Some files exceed the 500 line limit. Please refactor before committing."
    exit 1
fi

# Format only the staged files first to avoid formatting unrelated files
echo "ğŸ¨ Formatting staged Dart files..."
printf "%s\n" "$STAGED_FILES" | while IFS= read -r file; do
    [ -n "$file" ] || continue
    dart format "$file"
done

# Apply automatic fixes to staged files
echo "ğŸ”§ Applying automatic fixes to staged files..."
dart fix --apply

# Run analysis on the whole project
echo "ğŸ” Running analysis..."
flutter analyze

if [ $? -ne 0 ]; then
    echo "âŒ Analysis failed. Please fix the issues before committing."
    exit 1
fi

# Re-stage all the originally staged Dart files (they may have been formatted/fixed)
echo "ğŸ“¦ Re-staging formatted and fixed files..."
printf "%s\n" "$STAGED_FILES" | while IFS= read -r file; do
    [ -n "$file" ] || continue
    git add -- "$file"
done

echo "âœ… All checks passed!"
echo "ğŸ‰ Pre-commit hook completed successfully!"