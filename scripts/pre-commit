#!/bin/sh

echo "🔍 Running pre-commit hook..."

# Get all staged Dart files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep '\.dart$')

if [ -z "$STAGED_FILES" ]; then
    echo "✅ No Dart files to check."
    echo "🎉 Pre-commit hook completed successfully!"
    exit 0
fi

COUNT=$(printf "%s\n" "$STAGED_FILES" | wc -l | tr -d ' ')
echo "📝 Found ${COUNT} Dart file(s) to process..."

# Format only the staged files first to avoid formatting unrelated files
echo "🎨 Formatting staged Dart files..."
printf "%s\n" "$STAGED_FILES" | while IFS= read -r file; do
    [ -n "$file" ] || continue
    dart format "$file"
done

# Apply automatic fixes to staged files
echo "🔧 Applying automatic fixes to staged files..."
dart fix --apply

# Run analysis on the whole project
echo "🔍 Running analysis..."
flutter analyze

if [ $? -ne 0 ]; then
    echo "❌ Analysis failed. Please fix the issues before committing."
    exit 1
fi

# Re-stage all the originally staged Dart files (they may have been formatted/fixed)
echo "📦 Re-staging formatted and fixed files..."
printf "%s\n" "$STAGED_FILES" | while IFS= read -r file; do
    [ -n "$file" ] || continue
    git add -- "$file"
done

echo "✅ All checks passed!"
echo "🎉 Pre-commit hook completed successfully!"