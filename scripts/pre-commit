#!/bin/sh

echo "ğŸ” Running pre-commit hook..."

# Get all staged Dart files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep '\.dart$')

if [ -z "$STAGED_FILES" ]; then
    echo "âœ… No Dart files to check."
    echo "ğŸ‰ Pre-commit hook completed successfully!"
    exit 0
fi

echo "ğŸ“ Found $(echo "$STAGED_FILES" | wc -l | tr -d ' ') Dart file(s) to process..."

# Run format-fix script which handles formatting, fixes, and analysis
scripts/format-and-fix
if [ $? -ne 0 ]; then
    echo "âŒ Format and fix failed. Please fix the issues before committing."
    exit 1
fi

# Re-add all modified staged files to staging
echo "ğŸ“¦ Re-staging formatted and fixed files..."
for file in $STAGED_FILES; do
    git add "$file"
done

echo "âœ… All checks passed!"
echo "ğŸ‰ Pre-commit hook completed successfully!"